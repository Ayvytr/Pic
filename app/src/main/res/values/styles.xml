<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tv_settings_left">
        <item name="android:layout_width">@dimen/_0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
    </style>
    <style name="tv_settings_right">
        <item name="android:layout_width">@dimen/_100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:drawableRight">@drawable/ic_right_arrow</item>
        <item name="android:drawablePadding">@dimen/_10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:paddingRight">@dimen/_10dp</item>
    </style>
    <style name="ll_settings">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_50dp</item>
    </style>
</resources>